<% @title = 'Gallery' %>
<h2>Image Gallery</h2>
<p>Click the links on the left to filter by category, click the thunbnail images
    below to view the full size image.</p>

<div id="galleryIndex">
<% @cats.each do |k, v| %>
  <div>
    <%= link_to_unless_current k, v %>
  </div>
<% end %>
</div>

<div id="galleryDisplay">
  <% @pics.each do |pic| %>
    <%= link_to(image_tag(pic['thumb_url']), pic['image_url']) %>
  <% end %>
</div>
