%h2 Listing users
%table
  %tr
    %th Name
    %th
    %th

- @users.each do |user|
  %tr
    %td
      = user.name
    %td
      = link_to 'Edit', edit_user_path(user)
    %td
      = link_to_unless @current_user == user.id,
                      'Destroy',
                      user, method: :delete,
                      data: { confirm: 'Are you sure?' }

%br/

= link_to 'New User', new_user_path
