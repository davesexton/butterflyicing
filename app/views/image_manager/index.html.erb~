<% @title = 'Image Manager' %>
<h2>Image Manager</h2>
<p>Use the file selector below to pick an image you want to upload, make
   sure that use the drop-down to select which category you want the image
   displayed under.</p>
<div>
  <%= form_tag({action: :upload}, multipart: true) do %>
    <%= label_tag 'picture', 'Select image file: ' %>
    <%= file_field_tag 'picture', size: 5 %>
    <br />
    <%= label_tag 'category', 'Select category: ' %>
    <%= select_tag 'category', options_for_select(@cats), include_blank: true, size: '1x20' %>

    <%= submit_tag 'Upload Image' %>
  <% end %>
  <p>To remove an image click the link below it from the display below.</p>
</div>

<div id="galleryDisplay">
  <% @cats.each do |k, v| %>
    <div>
      <h2><%= k %></h2>
    </div>
    <% @pics.each do |pic| %>
      <% if pic[:category] == k.downcase %>
        <div class="imgHolder">
          <%= link_to(image_tag(pic[:thumb_url], {size: '75x75'}), pic[:image_url], class: 'lightBox') %>
          <%= link_to 'Delete', image_manager_path(image_url: pic[:image_url]), method: :delete, data: { confirm: 'Are you sure?'} %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
