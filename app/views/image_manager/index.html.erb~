<% @title = 'Image Manager' %>
<% flash.each do |key, value| %>
<%= content_tag(:div, sanitize(value), :class => "flash #{key}") %>
<% end %>

<h2>Image Manager</h2>

<%= form_tag({action: :upload}, multipart: true) do %>
  <%= label_tag 'category', 'Select category: ' %>
  <%= select_tag 'category', options_for_select(@cats), include_blank: true, size: 20 %>
  <br />
  <%= label_tag 'picture', 'Select image file: ' %>
  <%= file_field_tag 'picture', size: 5 %>
  <br />
  <%= submit_tag 'Upload Image' %>
<% end %>
