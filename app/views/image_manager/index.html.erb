<% @title = 'Image Manager' %>
<% flash.each do |key, value| %>
<%= content_tag(:div, sanitize(value), :class => "flash #{key}") %>
<% end %>

<h2>Image Manager</h2>

<%= form_tag({action: :upload}, multipart: true) do %>
  <%= label_tag :category, 'Select category: ' %>
  <%= select_tag :category, options_for_select(@cats), include_blank: true %>
  <br />
  <%= file_field_tag 'picture' %>
  <br />
  <%= submit_tag 'Upload Image' %>
<% end %>
